{
  "compilerOptions": {
      "rootDir": "src",
      "outDir": "bin",
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "es5",
      "lib": [
          "es6",
          "dom", // 添加 dom 选项
      ],
      "types": [
          "reflect-metadata"
      ],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  }
}